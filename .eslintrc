{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "classes": true
    },
  },
  "globals": {
    "TweenLite": true,
    "TweenMax": true,
    "google": true,
    "Promise": true,
    "__": true,
    "Expo": true,
    "Quad": true,
    "detect": true,
    "tracker": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "eqeqeq": 2,
    "no-console": 0,
    "comma-dangle": 0,
    "curly": [2, "multi-line", "consistent"],
    "no-inner-declarations": 0,
    "no-unused-vars": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-extra-semi": 2,
    "semi-spacing": 2,
    "semi": 2,
    "guard-for-in": 2,
    "no-undef": 2,
    "no-trailing-spaces": 1,
    "react/jsx-uses-vars": 1,
    "no-irregular-whitespace": 1,
    "no-multi-spaces": 1,
    "no-whitespace-before-property": 1,
    "space-infix-ops": 1,
    "react/jsx-uses-react": 1,
  }
}
